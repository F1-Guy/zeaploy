@page
@model zeaploy.Pages.Users.UsersModel
@{
    ViewData["Title"] = "All Users";
}
<h5>All Users</h5>

<form class="row d-flex justify-content-start">
    <div class="col-sm-auto">
        <input class="form-control" asp-for="Criteria" type="search" placeholder="Search by company name or user name/e-mail">
    </div>
    <div class="col-sm">
        <button class="btn btn-success" type="submit">Search</button>
    </div>
</form>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email Address</th>
            <th>Course</th>
            <th>Job Title</th>
            <th>Manage</th>
        </tr>
    </thead>
    <tbody>
        @foreach (AppUser appUser in Model.AppUsers)
        {
            <tr>
                <td>@appUser.Name</td>
                <td>@appUser.Email</td>
                <td>@appUser.Course</td>
                <td>@appUser.JobTitle</td>
                <td>
                    <a class="btn btn-primary btn-danger" asp-route-id="@appUser.Id" asp-page="/Users/Delete">Delete</a>
                    <a class="btn btn-primary btn-sucess" asp-route-id="@appUser.Id" asp-page="/Users/Edit">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>