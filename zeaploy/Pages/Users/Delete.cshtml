@page "{id}"
@model zeaploy.Pages.Users.DeleteModel
@{
}

<ul class="list-group col-sm-8 offset-sm-2">
    <li class="list-group-item">
        <h5><b>Are you sure you want to delete this user?</b></h5>
        <h6 class="text-danger">@Model.AppUser.Name's applications will also be removed</h6>
    </li>
    <li class="list-group-item">
        <form method="post">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.AppUser.Name):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AppUser.Name)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.AppUser.Email):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AppUser.Email)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.AppUser.Course):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AppUser.Course)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.AppUser.JobTitle):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AppUser.JobTitle)
                </dd>
            </dl>
            <div class="row d-flex justify-content-end">
                <div class="col-sm-4">
                    <button class="btn btn-outline-danger" type="submit">Delete user</button>
                </div>
            </div>
        </form>
    </li>
</ul>