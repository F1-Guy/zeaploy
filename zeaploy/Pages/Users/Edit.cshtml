@page "{id}"
@model zeaploy.Pages.Users.EditModel
@{
}

<ul class="list-group col-sm-8 offset-sm-2">
    <li class="list-group-item">
        <h5><b>Edit user information</b></h5>
    </li>
    <li class="list-group-item">
        <div class="card mt-2">
            <div class="card-body bg-light">
                <form method="post" id="contact-form" role="form">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="controls">
                        <div class="row">
                            <div class="col-md-">
                                <div class="form-group">
                                    <label asp-for="@Model.AppUser.Email" class="control-label"></label>
                                    <input asp-for="@Model.AppUser.Email" class="form-control" readonly />
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="@Model.AppUser.Name" class="control-label"></label>
                                    <input asp-for="@Model.AppUser.Name" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="@Model.AppUser.Location" class="control-label"></label>
                                    <input asp-for="@Model.AppUser.Location" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="@Model.AppUser.Course" class="control-label"></label>
                                    <input asp-for="@Model.AppUser.Course" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="@Model.AppUser.JobTitle" class="control-label"></label>
                                    <input asp-for="@Model.AppUser.JobTitle" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="row d-flex justify-content-between">
                            <div class="col d-flex justify-content-start">
                                <a class="btn btn-outline-danger" asp-page="/Users/Users">Cancel</a>
                            </div>
                            <div class="col d-flex justify-content-center">
                                <button class="btn btn-outline-warning" type="reset">Reset</button>
                            </div>
                            <div class="col d-flex justify-content-end">
                                <button class="btn btn-outline-success" type="submit" value="Edit">Save</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </li>
</ul>
