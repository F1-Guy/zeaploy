@page "{advertisementId}"
@model zeaploy.Pages.Advertisements.DeleteModel
@{
}

<ul class="list-group col-sm-8 offset-sm-2">
    <li class="list-group-item">
        <h5><b>Are you sure you want to delete this advertisement?</b></h5>
        <h6 class="text-danger">The applications for this advertisement will also be removed.</h6>
    </li>
    <li class="list-group-item">
        <form method="post">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Advertisement.Id):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Advertisement.Id)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Advertisement.Company):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Advertisement.Company)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.ShortDesc):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ShortDesc)...
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Advertisement.JobType):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Advertisement.JobType)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Advertisement.Position):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Advertisement.Position)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Advertisement.Posted):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Advertisement.Posted)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Advertisement.Wage):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Advertisement.Wage) DKK/hr
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Advertisement.Location):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Advertisement.Location)
                </dd>
            </dl>
            <div class="row d-flex justify-content-end">
                <div class="col-sm-4">
                    <button class="btn btn-outline-danger" type="submit">Delete advertisement</button>
                </div>
            </div>
        </form>
    </li>
</ul>