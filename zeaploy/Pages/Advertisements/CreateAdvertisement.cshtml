@page
@model zeaploy.Pages.Advertisements.CreateAdvertisementModel
@{
}

<div class="container">
    <div class=" text-center mt-5 ">

        <h1>Create a new Advertisement</h1>
    </div>
    <div class="row ">
        <div class="col-lg-7 mx-auto">
            <div class="card mt-2 mx-auto p-4 bg-light">
                <div class="card-body bg-light">

                    <div class="container">
                        <form method="post" id="contact-form" role="form">
                            <div class="controls">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="form_company">Company *</label>
                                            <input id="form_company" type="text" name="company" class="form-control" placeholder="Please enter companies name *" required="required" data-error="Company name is required.">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="form_position">Position *</label>
                                            <input id="form_position" type="text" name="position" class="form-control" placeholder="Please enter the name of the position *" required="required" data-error="Position is required.">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="form_wage">Wage</label>
                                            <input id="form_wage" name="wage" class="form-control" placeholder="Please enter wage for position">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="form_jobType">Select Job Type *</label>
                                            <select id="form_jobType" name="jobType" class="form-control" required="required" data-error="Please choose job type">
                                                <option value="" selected disabled>--Select Job Type--</option>
                                                <option>Part-time</option>
                                                <option>Full-time</option>
                                                <option>Internship</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group justify-content-md-around">
                                        <label for="form_location">Select Location *</label>
                                        <select id="form_location" name="location" class="form-control" required="required" data-error="Please choose location">
                                            <option value="" selected disabled>--Select Location--</option>
                                            <option>Roskilde</option>
                                            <option>Copenhagen</option>
                                            <option>Køge</option>
                                            <option>Næstved</option>
                                            <option>Valby</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="form_message">Description *</label>
                                            <textarea id="form_description" name="description" class="form-control" placeholder="Write decription." rows="4" required="required" data-error="Description is requred."></textarea>
                                        </div>
                                    </div>
                                    <div class="col-md-12" style="margin-top:2%; margin-bottom:2%">
                                        <input type="submit" class="btn btn-success btn-send  pt-2 btn-block" value="Create Advertisement">
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
