@page "{advId}"
@model zeaploy.Pages.Applications.CreateApplicationModel
@{
}
<h5> Application for a job position: @Model.Adv.Position Company: @Model.Adv.Company</h5>

<form method="post">
<label for="Name">Name:</label>
<input type="text" id="name" name="Name" value="@Model.AppUser.Name" readonly><br><br>

<label for="Email">Email:</label>
<input type="text" id="email" name="Email" value="@Model.AppUser.Email" readonly><br><br>

<label for="Name">Course:</label>
<input type="text" id="course" name="Course" value="@Model.AppUser.Course" readonly><br><br>

<input type="submit" class="btn btn-success btn-send  pt-2 btn-block" value="Apply" >
</form>