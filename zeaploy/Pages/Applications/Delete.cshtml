@page "{applicationId}"
@model zeaploy.Pages.Applications.DeleteModel
@{
}

<ul class="list-group col-sm-8 offset-sm-2">
    <li class="list-group-item">
        <h5><b>Are you sure you want to remove this application?</b></h5>
    </li>
    <li class="list-group-item">
        <form method="post">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Application.Id):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Application.Id)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Application.AppUser.Name):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Application.AppUser.Name)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Application.AppUser.Email):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Application.AppUser.Email)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Application.Advertisement.Company):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Application.Advertisement.Company)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Application.Advertisement.Position):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Application.Advertisement.Position)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Application.DateCreated):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Application.DateCreated)
                </dd>
            </dl>
            <div class="row d-flex justify-content-end">
                <div class="col-sm-4">
                    <button class="btn btn-outline-danger" type="submit">Delete application</button>
                </div>
            </div>
        </form>
    </li>
</ul>