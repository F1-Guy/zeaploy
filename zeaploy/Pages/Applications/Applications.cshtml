@page "{advertisementId?}"
@model zeaploy.Pages.Applications.ApplicationsModel
@{
}
@if (@Model.OpenAdvertisement == null)
{
    <h1>All Applications</h1>
}
else
{
    <h1>Applications for Company: @Model.OpenAdvertisement.Company</h1>
}

<div class="row col-3 d-flex justify-content-between">
    <form class="form-inline">
        <input class="form-control" asp-for="Criteria" type="search" placeholder="Search" label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Application Id</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Company</th>
            <th scope="col">Position</th>
            <th scope="col">Application Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Applications)
        {
            <tr scope="row">
                <td>@item.Id</td>
                <td>@item.AppUser.Name</td>
                <td>@item.AppUser.Email</td>
                <td>@item.Advertisement.Company</td>
                <td>@item.Advertisement.Position</td>
                <td>@item.DateCreated.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
