@page
@model zeaploy.Account.RegisterModel
@{
}

<div class="wrapper">
    <div class="loginLogo">
        <img src="~/assets/zeaploy_logo.png" alt="ZeaPloy">
    </div>
    <div class="text-center mt-4 name">
        Register
    </div>
    <form class="p-3 mt-3" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group d-flex align-items-center">
            <input asp-for="@Model.Registration.Email" class="form-control" placeholder="Email" />
        </div>
        <hr />
        <div class="form-group d-flex align-items-center">
            <input asp-for="@Model.Registration.Name" class="form-control" placeholder="Name" />
        </div>
        <hr />
        <div class="form-group d-flex align-items-center">
            <ul class="list-unstyled">
                <li>Password must include at least: </li>
                <ul>
                    <li>more than 6 charactes</li>
                    <li>one uppercase character</li>
                    <li>one numercial character</li>
                    <li>one special character</li>
                </ul>
            </ul>
        </div>
        <div class="form-group d-flex align-items-center">
            <input asp-for="@Model.Registration.Password" class="form-control" placeholder="Password" />
        </div>
        <hr />
        <div class="form-group d-flex align-items-center">
            <input asp-for="@Model.Registration.ConfirmPassword" class="form-control" placeholder="Confirm password" />
        </div>
        <hr />
        <div class="d-flex justify-content-center">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </form>
    <div class="text-center fs-6">
        <a asp-page="/Account/Login">Login</a>
    </div>
</div>
