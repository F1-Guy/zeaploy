@page
@model zeaploy.Pages.Account.LoginModel
@{
}

<h1>User Login</h1>


<div class="form-bg">
    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <form class="form-horizontal" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <span class="heading">Log In</span>
                    <div class="form-group">
                        <label asp-for="@Model.LoginViewModel.Email"></label>
                        <input asp-for="@Model.LoginViewModel.Email" type="email" id="inputEmail3" class="form-control" placeholder="Email" />
                        <span asp-validation-for="@Model.LoginViewModel.Email" class="text-danger"></span>
                        <i class="fa fa-user"></i>
                    </div>
                    <div class="form-group help">
                        <label asp-for="@Model.LoginViewModel.Password"></label>
                        <input asp-for="@Model.LoginViewModel.Password" type="password" class="form-control" id="inputPassword3" placeholder="Password" />
                        <span asp-validation-for="@Model.LoginViewModel.Password" class="text-danger"></span>
                        <i class="fa fa-lock"></i>
                        <a href="#" class="fa fa-question-circle"></a>
                    </div>
                    <div class="form-group">
                        <div class="main-checkbox">
                            <input type="checkbox" value="None" id="checkbox1" name="check">
                        <input asp-for="@Model.LoginViewModel.RememberMe" type="checkbox" value="None" id="checkbox1" name="check"/>
                        <label for="checkbox1" asp-for="@Model.LoginViewModel.RememberMe"></label>
                        </div>
                        <span class="text">@Html.DisplayNameFor(m => m.LoginViewModel.RememberMe)</span>
                        <button type="submit" class="btn btn-default">log in</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

