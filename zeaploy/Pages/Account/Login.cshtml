@page
@model zeaploy.Pages.Account.LoginModel
@{
}

<div class="wrapper">
    <div class="loginLogo">
        <img src="~/assets/zeaploy_logo.png" alt="ZeaPloy">
    </div>
    <div class="text-center mt-4 name">
        Sign In
    </div>
    <form class="p-3 mt-3" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group d-flex align-items-center">
            <input asp-for="@Model.LoginViewModel.Email" class="form-control" placeholder="Email" />
        </div>
        <hr />
        <div class="form-group d-flex align-items-center">
            <input asp-for="@Model.LoginViewModel.Password" class="form-control" placeholder="Password" />
        </div>
        <div class="form-group" style="margin-top:15px; margin-bottom:15px">
            <div class="form-check form-switch">
                <label class="form-check-label" for="flexSwitchCheckDefault" asp-for="@Model.LoginViewModel.RememberMe">
                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" asp-for="@Model.LoginViewModel.RememberMe" />
                    @Html.DisplayNameFor(m => m.LoginViewModel.RememberMe)
                </label>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-primary" type="submit">Login</button>
        </div>
    </form>
    <div class="text-center fs-6">
        <a asp-page="/Account/Register">Sign up</a>
    </div>
</div>
