@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav navbar-right">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-page="/Profile/Profile">@User.Identity.Name</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-page="/Account/Logout">Logout</a>
        </li>

    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-page="/Account/Login">Login</a>
        </li>
        <li class="nav-item me">
            <a class="nav-link text-light" asp-page="/Account/Register">Register</a>
        </li>
    }
</ul>
