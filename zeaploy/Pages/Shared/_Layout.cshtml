<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ZeaPloy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/zeaploy.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="icon" href="/assets/grad.ico" />
</head>

<body>
    <header>
        <nav class="autohide navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/Index"><img src="~/assets/zeaploy_logo.png" class="logo" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="main_nav">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Advertisements/Advertisements">Advertisements</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Applications/Applications" asp-route-advertisementId="">Applications</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Users/Users" asp-route-advertisementId="">Users</a>
                        </li>
                    </ul>
                    <partial name="_LoginStatusPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark footer" style="margin-bottom: -100px;">
        <div class="container p-4 pb-0">
            <section class="mb-4 text-center">
                <a class="btn btn-outline-light btn-floating btn-md m-1"
                   href="https://www.facebook.com/zealandacademy"
                   target="_blank"
                   role="button">
                    <i class="bi bi-facebook"></i>
                </a>

                <a class="btn btn-outline-light btn-floating m-1"
                   href="https://www.zealand.dk/"
                   target="_blank"
                   role="button">
                    <i class="bi bi-globe"></i>
                </a>

                <a class="btn btn-outline-light btn-floating m-1"
                   href="https://www.instagram.com/zealand_academy/?hl=en"
                   target="_blank"
                   role="button">
                    <i class="bi bi-instagram"></i>
                </a>

                <a class="btn btn-outline-light btn-floating m-1"
                   href="https://www.linkedin.com/school/zealand-sj%C3%A6llands-erhvervsakademi/?originalSubdomain=dk"
                   target="_blank"
                   role="button">
                    <i class="bi bi-linkedin"></i>
                </a>

                <a class="btn btn-outline-light btn-floating m-1"
                   href="https://github.com/F1-Guy/zeaploy"
                   target="_blank"
                   role="button">
                    <i class="bi bi-github"></i>
                </a>
                <hr />
                <a class="text-end text-light text-decoration-none" asp-page="/Privacy">
                    Privacy Policy
                </a>
            </section>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        document.addEventListener("DOMContentLoaded", function() {

            el_autohide = document.querySelector('.autohide');

            navbar_height = document.querySelector('.navbar').offsetHeight;
            document.body.style.paddingTop = navbar_height + 'px';

            if (el_autohide) {
                var last_scroll_top = 0;
                window.addEventListener('scroll', function() {
                    let scroll_top = window.scrollY;
                    if (scroll_top < last_scroll_top) {
                        el_autohide.classList.remove('scrolled-down');
                        el_autohide.classList.add('scrolled-up');
                    }
                    else {
                        el_autohide.classList.remove('scrolled-up');
                        el_autohide.classList.add('scrolled-down');
                    }
                    last_scroll_top = scroll_top;
                });
            }
        });
    </script>
    <script>
        $(document).ready(function() {

            var docHeight = $(window).height();
            var footerHeight = $('#footer').height();
            var footerTop = $('#footer').position().top + footerHeight;

            if (footerTop < docHeight) {
                $('#footer').css('margin-top', 10 + (docHeight - footerTop) + 'px');
            }
        });
    </script>
</body>
</html>